<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
    <LinearLayout
        android:id="@+id/homePageView"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/homePageImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/homepagepressed" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/friendView"
        android:gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/friendImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/friendnormal" />
    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:id="@+id/meView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/meImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/menormal" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>
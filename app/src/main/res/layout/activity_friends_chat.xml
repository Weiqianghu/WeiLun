<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_chat_top_bar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.weilun.ui.PullRefreshListView
            android:id="@+id/chatMessageListView"
            android:layout_width="match_parent"
            android:divider="@null"
            android:layout_height="match_parent"></com.weilun.ui.PullRefreshListView>

    </FrameLayout>

    <include layout="@layout/include_chat_bottom_bar" />

    <FrameLayout
        android:id="@+id/Container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></FrameLayout>
</LinearLayout>
